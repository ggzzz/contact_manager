<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<ul>
	<% @company.phone_numbers.each do |phone| %>
		<li><%=phone.number %>
			<%=link_to 'Edit', edit_phone_number_path(phone) %>
			<%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %>
		</li>
	<% end %>

	<p>
	<% @company.email_addresses.each do |email_address| %>
		<li><%=email_address.address %>
			<%=link_to 'Edit', edit_email_address_path(email_address) %>
			<%=link_to 'Destroy', email_address, method: :delete, data: {confirm: 'Are you sure'} %>
		</li>
	<% end %>
    </p>
</ul>

<%= link_to 'Add phone number', new_phone_number_path(contact_id: @company.id, contact_type: 'Company') %> | 
<%= link_to 'Add email address', new_email_address_path(contact_id: @company.id, contact_type: 'Company') %> |

<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
